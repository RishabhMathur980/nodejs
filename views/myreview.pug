extends base
block content 

    .reviews
      each x in review 
        .reviews__card
            .reviews__avatar
                img.reviews__avatar-img(src=`/img/users/${x.user.photo}`, alt='Jim Brown')
                h6.reviews__user=x.user.name
            p.reviews__text=x.review
            .reviews__rating
              each star in [1,2,3,4,5]
                svg.reviews__star(class=`reviews__star--${x.rating>=star?'active':'inactive'}`)
                    use(xlink:href='/img/icons.svg#icon-star')
                